# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (Railway will provide DATABASE_URL automatically)
# If using Railway PostgreSQL, you don't need to set these manually
DATABASE_URL=postgresql://user:password@host:port/database

# Alternative: Individual database credentials (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_menu
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Secret (REQUIRED - generate a strong random string)
JWT_SECRET=your_very_secure_random_secret_key_here

# Optional: Server Host (Railway manages this automatically)
# SERVER_HOST=0.0.0.0
